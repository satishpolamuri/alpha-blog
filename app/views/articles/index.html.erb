<h1> The list of Articles</h1>

<p>

<%= link_to 'Create new Articles', new_article_path %>  

</p>

<table>
    <tr>
        <th>Title</th>
        <th> Description</th>
    </tr>
    
    <% @articles.each do |a| %>
    
    <tr>
        <td><%= a.title %></td>
        <td><%= a.description %></td>
        <td><%= link_to 'Edit', edit_article_path(a)%></td>
        <td><%= link_to 'Show', article_path(a)%></td>
        <td><%= link_to 'Delete', article_path(a), method: :delete, data: {confirm: "Are You sure" }%></td>
    </tr>
    
    <%end%>
    
    
    
</table>
<p>

<td><%= link_to 'Back to Home Page', root_path%></td>

</p>